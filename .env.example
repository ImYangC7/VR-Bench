# VR-Bench Environment Configuration
# Copy this file to .env and fill in your values

# Dataset paths
DATASET_ROOT=/path/to/dataset_VR
OUTPUT_ROOT=/path/to/output

# Model cache
HF_CACHE_DIR=/path/to/huggingface_model
TRANSFORMERS_CACHE=/path/to/huggingface_model

# CUDA configuration
CUDA_HOME=/usr/local/cuda
CUDA_VISIBLE_DEVICES=0,1

# API keys (for VLM evaluation)
OPENAI_API_KEY=your_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Generation settings
MAX_WORKERS=4
DEFAULT_FPS=24

# Evaluation settings
EVAL_WORKERS=4
EVAL_NUM_SAMPLES=1000
EVAL_THRESHOLD=0.05

